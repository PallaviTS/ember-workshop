<div class="clearfix">
    <form role="form" name="formname">
        <div class="clearfix">
            <div class="col-md-12 form-horizontal padding-top-10px well">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-sm-5 control-label text-right">Owner Name :</label>
                            <div class="col-sm-7">
                                {{input name="owner"  class="form-control" type="text" value=ownerName}}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-5 control-label text-right">From :</label>
                            <div class="col-sm-7">
                                {{input name="to"  class="form-control" type="text" value=to}}
                            </div>
                        </div>
                        <div class="form-group">
                                <label class="col-sm-5 control-label text-right">Destination :</label>
                                <div class="col-sm-7">
                                    {{input name="from" class="form-control"  type="text" value=from}}
                                </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-5 control-label text-right">Contact No :</label>
                            <div class="col-sm-7">
                                {{input name="contactno" class="form-control"  type="text" value=contactNo}}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-sm-12 col-sm-offset-4">
                                <button {{action 'savePost'}} class="btn btn-primary ">
                                    Add Post
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>